@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<br /><br /> <!--Линия элемента разрыва-->
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6"> <!--(всего у нас 12 колонок, 2 по 6 мы создаем для кнопок)-->
            <h2 class="text-primary">Список категорий</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Создать новую категорию <!--Для избежания разрыва строки между словами-->
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover text-center align-middle h6" style="width:100%">
    <thead>
        <tr class="align-middle">
            <th>
                Уникальный ID
            </th>
            <th>
                Имя
            </th>
            <th class="m-auto">
                Порядок 
            </th>
            <th>
                Время создания
            </th>
            <th>
                Инструменты
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.DisplayOrder
                </td>
                <td width="30%">
                    @obj.CreatedDateTime
                </td>
               <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Изм.</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2"><i class="bi bi-trash"></i>Удалить</a>
                    </div>
               </td>
            </tr>
        }
    </tbody>
</table>