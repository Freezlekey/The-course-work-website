@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Категория Создания</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div> @*Список ошибок, появляющийся сверху*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
		<a asp-category="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Вернуться к списку</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" /> //Принцип, который убирает перезагрузку сервера при нажатии кнопки, делает перезагрузку на стороне клиента
	}
}